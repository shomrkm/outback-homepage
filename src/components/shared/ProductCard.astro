  ---
  import { formatToCurrency } from "../../util/formatToCurrency"

  interface Props {
    title: string;
    description: string;
    image: string;
    price: number;
    url?: string;
  }
  const { title, description, image, price, url } = Astro.props as Props;
  ---

  <div class="product-card">
    <a href={url}>
      <img src={image} alt={title} width="100px">
      <div class="product-info">
        <p class="title">{title}</p>
        <p class="description">{description}</p>
        <p class="price">{formatToCurrency(price)}</p>
      </div>
    </a>
  </div>

  <style>
    a {
      text-decoration: none;
    }
    img {
      display: block;
      width: 100%;
      aspect-ratio: 4/3;
      object-fit: cover;
    }
    .product-card {
      display: flex;
      flex-direction: column;
      justify-content: start;
      align-items: center;
      border: solid;
      border-color: lightslategray;
      border-width: thin;
      margin-bottom: var(--space-l);
      width: auto;
      height: 320px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .product-card:hover {
      box-shadow: 5px 5px 10px 0 var(--color-shadow);
      transform: translate(-5px, -5px);
    }
    .product-info {
      padding: var(--space-xs);
    }
    .title {
      text-align: center;
      font-weight: var(--font-bold);
      height: 20px;
      overflow: hidden;
    }
    .description {
      display: none;
    }
    .price {
      font-size: var(--font-l);
      font-weight: var(--font-bold);
      text-align: center;
      margin-top: var(--space-m);
    }
    @media screen and (min-width: 636px) {
      .product-card {
        width: 400px;
        height: 440px;
      }
      .title {
        text-align: start;
        margin-bottom: var(--space-xxs);
      }
      .description {
        display: flex;
        color: lightslategray;
        font-size: var(--font-xs);
        overflow: hidden;
        height: 60px;
        margin-bottom: var(--space-s);
      }
      .price {
        text-align: right;
      }
    }
  </style>