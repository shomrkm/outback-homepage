<style>
	main {
		margin: auto;
		padding: var(--space-m);
		max-width: calc(100% - var(--space-s));
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
	}
	.title {
    padding: var(--space-m);
    text-align: center;
	}
  .instructions {
    padding: var(--space-m);
    text-align: center;
  }
</style>
