---
import Layout from "./Layout.astro";
const {frontmatter} = Astro.props;

function formatToCurrency(price: number) {
  return new Intl.NumberFormat(
    'ja-JP',
    { style: 'currency', currency: 'JPY' }
    ).format(frontmatter.price)
}

---
<Layout title={frontmatter.name}>
  <main>
    <section class="product-description">
      <h1>{frontmatter.name}</h1>
      <p>{frontmatter.description}</p>
      <p>価格: {formatToCurrency(frontmatter.price)}</p>
      <img src={frontmatter.image} alt={frontmatter.name} width="500px">
    </section>
    <section>
      <slot />
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
		padding: 2rem;
		max-width: calc(100% - 16rem);
		line-height: 1.6;
  }
  h1 {
    font-size: 2rem;
  }
  .product-description {
    margin-bottom: 2rem;
  }
</style>