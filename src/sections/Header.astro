---
import BearLogo from '../components/shared/BearLogo.astro';
---

<nav class="header">
  <div class="header-logo">
    <a href="/">
      <BearLogo />
      <span>OUTBACK</span>
    </a>
  </div>
  <div class="nav-menu">
    <li class="nav-menu-item">
      <a href="/products">商品情報</a>
    </li>
    <li class="nav-menu-item">
      <a href="/about">会社情報</a>
    </li>
  </div>
  <div class="hamburger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
  </div>
  <script>
    document.querySelector('.hamburger')?.addEventListener('click', () => {
      document.querySelector('.nav-menu')?.classList.toggle('expanded');
    });
  </script>
</nav>

<style>
  li {
    list-style: none;
  }
  .header {
    display: flex;
    justify-content: start;
    align-items: center;
    background-color: var(--primary-color);
    position: fixed;
    top: 0;
    left: 0;
    height: var(--header-height);
    width: 100vw;
    z-index: 1000;
  }
  .header-logo a {
    font-size: var(--font-2xl);
    line-height: var(--line-h-2xl);
    display: flex;
    align-items: center;
    gap: var(--space-s);
    padding: var(--space-s);
    text-decoration: none;
    color: var(--font-color-primary);
  }
  .nav-menu {
    display: none;
    position: absolute;
    top: calc(var(--header-height) + 0.5rem);
    left: 0.5rem;
    width: calc(100vw - 1rem);
    background-color: var(--primary-color);
    border-radius: 20px;
  }
  .nav-menu-item {
    text-align: center;
    padding: var(--space-m);
  }
  .nav-menu-item a {
    display: block;
    font-weight: var(--font-bold);
    text-decoration: none;
    color: inherit;
  }
  .nav-menu-item a::after {
    background-color: var(--font-color-primary);
  }
  .expanded {
    display: unset;
  }
  .hamburger {
    margin-left: auto;
    padding-right: var(--space-m);
    cursor: pointer;
  }
  .hamburger .line {
    display: block;
    width: 35px;
    height: 3px;
    margin-bottom: 6px;
    background-color: var(--font-color-primary);
  }

  @media screen and (min-width: 636px) {
    .nav-menu {
      position: static;
      margin-top: 0;
      display: flex;
      width: auto;
      margin-left: auto;
      list-style-type: none;
      margin-right: var(--space-l);
      border: none;
    }
    .nav-menu-item {
      border: none;
    }
    .nav-menu-item a {
      font-weight: var(--font-bold);
      text-decoration: none;
      position: relative;
      display: inline-block;
      color: inherit;
    }
    .nav-menu-item a::after {
      content: '';
      position: absolute;
      left: 0;
      right: 0;
      bottom: -10px;
      height: 2px;
      background-color: var(--font-color-primary);
      transform: scale(0, 1);
      transition: 0.3s;
      transform-origin: left top;
    }
    .nav-menu-item a:hover::after {
      transform: scale(1, 1);
    }
    .hamburger {
      display: none;
    }
  }
</style>
