---
import Layout from '../layouts/Layout.astro';
const products = await Astro.glob("./products/*.md");
---

<Layout title="製品情報">
  <main>
    <h1>製品情報</h1>
    <section class="products">
      {
        products.map(product => (
          <li><a href={product.url}>{product.frontmatter.name}</a></li>
        ))
      }
    </section>
  </main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		max-width: calc(100% - var(--space-s));
		line-height: 1.6;
	}
  h1 {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
    padding: var(--space-s);
    margin-bottom: var(--space-l);
  }
  .products {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>