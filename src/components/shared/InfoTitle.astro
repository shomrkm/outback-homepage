---
interface Props {
  title: string;
  sub: string;
}
const { title, sub } = Astro.props as Props;
---

<div class="title">
  <h2>{title}</h2>
  <p class="title-sub">{sub}</p>
</div>

<style>
   h2 {
		font-size: 1.5rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
    margin-bottom: 0.25rem;
  }
  .title {
    margin-bottom: 1.25rem;
  }
  .title-sub {
    font-size: 0.8rem;
    color: #745030;
    justify-content: center;
  }
</style>